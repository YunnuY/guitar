<div class="episode_index">
  <% (0..5).each do |i| %>
  <div class="span3">
        <%= image_tag("#{@episodes[4*i].img_url}",  :alt => "#{@episodes[4*i].name}") %>
        <li><%= link_to @episodes[4*i].name, @episodes[4*i] %></li>
        <% @episodes[4*i].comments.each do |c| %>
          <li><%= "#{c.name}: #{c.content}" %></li>
        <% end %>
  </div>
  <div class="span3">
        <%= image_tag("#{@episodes[4*i+1].img_url}",  :alt => "#{@episodes[4*i+1].name}") %>
