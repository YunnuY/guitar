<div class="episode_index">
    <div class="span3">
      <% @episodes[0..@episodes.count/4-1].each do |e| %>
      <%= image_tag("/assets/lady.jpg",  :alt => "#{e.description}") %>
        <li><%= link_to e.name, e %></li>
        <% e.comments.each do |c| %>
          <li><%= "#{c.name}: #{c.content}" %></li>
        <% end %>
      <% end %>
    </div>
    <div class="span3">
      <% @episodes[@episodes.count/4..@episodes.count/2-1].each do |e| %>
      <%= image_tag("/assets/lady.jpg",  :alt => "#{e.description}") %>
