        <li><%= link_to @episodes[4*i+2].name, @episodes[4*i+2] %></li>
        <% @episodes[4*i+2].comments.each do |c| %>
          <li><%= "#{c.name}: #{c.content}" %></li>
        <% end %>
  </div>
  <div class="span3">
        <%= image_tag("#{@episodes[4*i+3].img_url}",  :alt => "#{@episodes[4*i+3].name}") %>
        <li><%= link_to @episodes[4*i+3].name, @episodes[4*i+3] %></li>
        <% @episodes[4*i+3].comments.each do |c| %>
          <li><%= "#{c.name}: #{c.content}" %></li>
        <% end %>
  </div>
  <% end %>
</div>
<%= paginate @episodes %>
