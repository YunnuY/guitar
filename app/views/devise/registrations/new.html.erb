<%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name) do |f| %>
  <h2>Sign up</h2>
  <div>
    <%= f.error_notification %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.submit "Submit", :class => "btn btn-primary" %>
  </div>
<% end %>
